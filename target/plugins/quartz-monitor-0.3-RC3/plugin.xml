<plugin name='quartz-monitor' version='0.3-RC3' grailsVersion='1.3 &gt; *'>
  <author>James Cook</author>
  <authorEmail>grails@jamescookie.com</authorEmail>
  <title>Quartz Monitor Grails Plugin</title>
  <description>One clear and concise page that enables you to administer all your Quartz jobs</description>
  <documentation>http://grails.org/plugin/quartz-monitor</documentation>
  <type>QuartzMonitorGrailsPlugin</type>
  <resources>
    <resource>grails.plugins.quartz.QuartzController</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies />
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='quartz' version='1.0-RC4' />
    </compile>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>